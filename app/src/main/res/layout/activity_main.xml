<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/layout_gallery_edittext"
                android:id="@+id/layoutH"
                app:title="@{`H : `}"
                app:titleRow="@{`Row`}"
                app:titleHigh="@{`High`}"/>

            <include layout="@layout/layout_gallery_edittext"
                android:id="@+id/layoutS"
                app:title="@{`S : `}"
                app:titleRow="@{`Row`}"
                app:titleHigh="@{`High`}"/>

            <include layout="@layout/layout_gallery_edittext"
                android:id="@+id/layoutV"
                app:title="@{`V : `}"
                app:titleRow="@{`Row`}"
                app:titleHigh="@{`High`}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <Button
                android:id="@+id/btnFindGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="앨범에서 찾기"/>

            <Button
                android:id="@+id/btnFindCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:text="카메라로 찾기"/>

            <Button
                android:id="@+id/btnTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:text="테스트 해보기"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
